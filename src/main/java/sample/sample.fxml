            <children>
                <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="34.0" prefWidth="100.0" text="Your dictionary" textAlignment="CENTER" />
                <ListView fx:id="personalDictionary" prefHeight="302.0" prefWidth="107.0" />
